{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>{{ category.name }}</h1>

        <p>Cette cat√©gorie contient {{ category.products|length }}</p>

        <div class="row">
            {% for product in category.products %}
                <div class="col-md-3 text-center">
                    <a href="{{ path('app_product', { slug: product.slug }) }}">
                        <img src="/uploads/{{ product.illustration }}" alt="{{ product.illustration }}" class="img-fluid">
                        <span class="d-block fw-bold text-block">{{ product.name }}</strong>
                    </a>
                    <span class="d-block">{{ product.priceWithTaxes|price }}</span>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
