{% extends 'base.html.twig' %}

{% block title %}Espace membre{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>Espace membre privé</h1>
        <h3>Modification de mon mot de passe</h3>
        <hr>

        {{ form_start(updatePasswordForm, { 'attr': { 'data-turbo': 'false' } }) }}
        
        <div class="mb-3 position-relative">
            <label for="actualPassword" class="form-label">{{ updatePasswordForm.actualPassword.vars.label }}</label>
            <div class="input-group">
                {{ form_widget(updatePasswordForm.actualPassword, { 'attr': {'id': 'actualPassword', 'class': 'form-control'} }) }}
                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="actualPassword">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
            {{ form_errors(updatePasswordForm.actualPassword) }}
        </div>

        <div class="mb-3 position-relative">
            <label for="plainPassword_first" class="form-label">{{ updatePasswordForm.plainPassword.first.vars.label }}</label>
            <div class="input-group">
                {{ form_widget(updatePasswordForm.plainPassword.first, { 'attr': {'id': 'plainPassword_first', 'class': 'form-control'} }) }}
                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="plainPassword_first">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
            {{ form_errors(updatePasswordForm.plainPassword.first) }}
        </div>

        <div class="mb-3 position-relative">
            <label for="plainPassword_second" class="form-label">{{ updatePasswordForm.plainPassword.second.vars.label }}</label>
            <div class="input-group">
                {{ form_widget(updatePasswordForm.plainPassword.second, { 'attr': {'id': 'plainPassword_second', 'class': 'form-control'} }) }}
                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="plainPassword_second">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
            {{ form_errors(updatePasswordForm.plainPassword.second) }}
        </div>

        {# <button type="submit" class="btn btn-success w-100 mt-3">Mettre à jour votre mot de passe</button> #}

        {{ form_end(updatePasswordForm) }}
    </div>
{% endblock %}

