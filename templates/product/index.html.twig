{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
{% endblock %}

{% block body %}
	<div class="container my-5">
		<div class="row">
			<div class="col-md-6">
				<img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"/>
			</div>
			<div class="col-md-6">
				<small><i><a href="{{ path('app_category', { slug: product.slug }) }}">{{ product.category.name }}</a> > {{ product.name }}</i></small>
				<h1>{{ product.name }}</h1>
				<span class="d-block mb-3">{{ product.priceWithTaxes|price }}</span>
				{{ product.description|raw }}
                <a href="{{ path('app_cart_add', { id: product.id }) }}" class="btn btn-success w-100 mt-3">Ajouter au panier</a>
			</div>
		</div>
	</div>
{% endblock %}
